<div class="grid lg:grid-cols-4 gap-8">
  <!-- Sidebar -->
  <aside class="lg:col-span-1">
    <div class="card card-body sticky top-24">
      <!-- Profile Header -->
      <div class="text-center mb-6">
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image.variant(resize_to_fill: [120, 120]), class: "avatar avatar-xl mx-auto mb-4" %>
        <% else %>
          <div class="avatar avatar-xl bg-accent-primary flex items-center justify-center text-white text-3xl font-medium mx-auto mb-4">
            <%= @user.name[0].upcase %>
          </div>
        <% end %>

        <h1 class="text-xl font-bold text-primary"><%= @user.name %></h1>
        <% if @user.username.present? %>
          <p class="text-sm text-muted">@<%= @user.username %></p>
        <% end %>
      </div>

      <!-- Bio -->
      <% if @user.introduction.present? %>
        <p class="text-sm text-secondary text-center mb-6"><%= @user.introduction %></p>
      <% end %>

      <!-- Stats -->
      <div class="grid grid-cols-3 gap-4 py-4 border-y border-border-color text-center">
        <div>
          <div class="text-lg font-semibold text-primary"><%= @user.books_count %></div>
          <div class="text-xs text-muted">投稿</div>
        </div>
        <div>
          <%= link_to followers_user_path(@user), class: "block hover:opacity-80 transition-opacity" do %>
            <div class="text-lg font-semibold text-primary"><%= @user.followers_count %></div>
            <div class="text-xs text-muted">フォロワー</div>
          <% end %>
        </div>
        <div>
          <%= link_to following_user_path(@user), class: "block hover:opacity-80 transition-opacity" do %>
            <div class="text-lg font-semibold text-primary"><%= @user.following_count %></div>
            <div class="text-xs text-muted">フォロー中</div>
          <% end %>
        </div>
      </div>

      <!-- Actions -->
      <div class="mt-6 space-y-3">
        <% if current_user == @user %>
          <%= link_to edit_user_path(@user), class: "btn-secondary w-full" do %>
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            プロフィール編集
          <% end %>
        <% else %>
          <div id="follow_button_<%= @user.id %>">
            <%= render "users/follow_button", user: @user %>
          </div>
        <% end %>
      </div>
    </div>
  </aside>

  <!-- Main Content -->
  <main class="lg:col-span-3">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-xl font-bold text-primary"><%= @user.name %>の投稿</h2>
      <span class="text-sm text-muted"><%= @books.total_count %>件</span>
    </div>

    <% if @books.any? %>
      <div class="grid sm:grid-cols-2 gap-6">
        <% @books.each do |book| %>
          <%= render "books/book_card", book: book, show_user: false %>
        <% end %>
      </div>

      <% if @books.total_pages > 1 %>
        <div class="mt-8 flex justify-center">
          <%= paginate @books %>
        </div>
      <% end %>
    <% else %>
      <div class="empty-state">
        <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        <h3 class="empty-state-title">まだ投稿がありません</h3>
      </div>
    <% end %>
  </main>
</div>
