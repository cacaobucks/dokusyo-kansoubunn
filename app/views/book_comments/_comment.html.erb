<%# locals: (comment:) %>
<div class="p-4 hover:bg-bg-tertiary/50 transition-colors" id="<%= dom_id(comment) %>">
  <div class="flex gap-3">
    <%= link_to user_path(comment.user), class: "flex-shrink-0" do %>
      <% if comment.user.profile_image.attached? %>
        <%= image_tag comment.user.profile_image.variant(resize_to_fill: [40, 40]), class: "avatar avatar-md" %>
      <% else %>
        <div class="avatar avatar-md bg-accent-primary flex items-center justify-center text-white font-medium">
          <%= comment.user.name[0].upcase %>
        </div>
      <% end %>
    <% end %>

    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2 mb-1">
        <%= link_to user_path(comment.user), class: "font-medium text-primary hover:underline" do %>
          <%= comment.user.name %>
        <% end %>
        <span class="text-xs text-muted"><%= time_ago_in_words(comment.created_at) %>前</span>

        <% if comment.user == current_user %>
          <div class="ml-auto">
            <%= button_to book_book_comment_path(comment.book, comment),
                          method: :delete,
                          class: "text-muted hover:text-accent-danger transition-colors p-1",
                          data: { turbo_confirm: "このコメントを削除しますか？" } do %>
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>

      <p class="text-sm text-secondary whitespace-pre-wrap"><%= comment.comment %></p>
    </div>
  </div>
</div>
