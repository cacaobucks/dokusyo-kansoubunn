<div class="min-h-[80vh] flex items-center justify-center py-12 px-4">
  <div class="w-full max-w-md">
    <div class="card">
      <div class="card-body">
        <!-- Header -->
        <div class="text-center mb-8">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-accent-primary/10 mb-4">
            <svg class="h-8 w-8 text-accent-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-primary">アカウント登録</h1>
          <p class="text-secondary mt-2">Bookersで読書体験を共有しましょう</p>
        </div>

        <%= form_with model: resource, url: user_registration_path, class: "space-y-5" do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <!-- Name -->
          <div class="form-group">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name,
                             class: "form-input",
                             placeholder: "表示名を入力",
                             autofocus: true,
                             autocomplete: "name" %>
          </div>

          <!-- Email -->
          <div class="form-group">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email,
                              class: "form-input",
                              placeholder: "メールアドレスを入力",
                              autocomplete: "email" %>
          </div>

          <!-- Password -->
          <div class="form-group">
            <%= f.label :password, class: "form-label" %>
            <% if @minimum_password_length %>
              <span class="text-xs text-muted ml-2">（<%= @minimum_password_length %>文字以上）</span>
            <% end %>
            <%= f.password_field :password,
                                 class: "form-input",
                                 placeholder: "パスワードを入力",
                                 autocomplete: "new-password" %>
          </div>

          <!-- Password Confirmation -->
          <div class="form-group">
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation,
                                 class: "form-input",
                                 placeholder: "パスワードを再入力",
                                 autocomplete: "new-password" %>
          </div>

          <!-- Submit -->
          <div class="pt-2">
            <%= f.submit "アカウントを作成", class: "btn-primary w-full py-3" %>
          </div>
        <% end %>

        <!-- Divider -->
        <div class="relative my-6">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-border-color"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-bg-secondary text-muted">または</span>
          </div>
        </div>

        <!-- Links -->
        <div class="text-center space-y-3">
          <p class="text-secondary">
            すでにアカウントをお持ちの方は
            <%= link_to "ログイン", new_user_session_path, class: "text-accent-primary hover:underline font-medium" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
