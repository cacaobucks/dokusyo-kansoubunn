<div class="min-h-[80vh] flex items-center justify-center py-12 px-4">
  <div class="w-full max-w-md">
    <div class="card">
      <div class="card-body">
        <!-- Header -->
        <div class="text-center mb-8">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-accent-primary/10 mb-4">
            <svg class="h-8 w-8 text-accent-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-primary">ログイン</h1>
          <p class="text-secondary mt-2">Bookersへようこそ</p>
        </div>

        <%= form_with model: resource, url: session_path(resource_name), class: "space-y-5" do |f| %>
          <!-- Name -->
          <div class="form-group">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name,
                             class: "form-input",
                             placeholder: "ユーザー名を入力",
                             autofocus: true,
                             autocomplete: "username" %>
          </div>

          <!-- Password -->
          <div class="form-group">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password,
                                 class: "form-input",
                                 placeholder: "パスワードを入力",
                                 autocomplete: "current-password" %>
          </div>

          <!-- Remember Me & Forgot Password -->
          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <label class="flex items-center gap-2 cursor-pointer">
                <%= f.check_box :remember_me, class: "w-4 h-4 rounded border-border-color text-accent-primary focus:ring-accent-primary bg-bg-tertiary" %>
                <span class="text-sm text-secondary">ログイン状態を保持</span>
              </label>
            <% end %>
            <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "パスワードを忘れた方", new_user_password_path, class: "text-sm text-accent-primary hover:underline" %>
            <% end %>
          </div>

          <!-- Submit -->
          <div class="pt-2">
            <%= f.submit "ログイン", class: "btn-primary w-full py-3" %>
          </div>
        <% end %>

        <!-- Divider -->
        <div class="relative my-6">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-border-color"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-bg-secondary text-muted">または</span>
          </div>
        </div>

        <!-- Links -->
        <div class="text-center space-y-3">
          <p class="text-secondary">
            アカウントをお持ちでない方は
            <%= link_to "新規登録", new_user_registration_path, class: "text-accent-primary hover:underline font-medium" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
