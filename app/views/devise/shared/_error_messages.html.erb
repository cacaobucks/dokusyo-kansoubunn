<% if resource.errors.any? %>
  <div class="bg-accent-danger/10 border border-accent-danger/20 rounded-lg p-4 mb-4" data-turbo-cache="false">
    <div class="flex items-start gap-3">
      <svg class="h-5 w-5 text-accent-danger flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div class="flex-1">
        <h3 class="text-sm font-medium text-accent-danger">
          <%= I18n.t("errors.messages.not_saved",
                     count: resource.errors.count,
                     resource: resource.class.model_name.human.downcase)
           %>
        </h3>
        <ul class="mt-2 text-sm text-accent-danger/80 list-disc list-inside space-y-1">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
