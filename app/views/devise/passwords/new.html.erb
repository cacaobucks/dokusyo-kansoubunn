<div class="min-h-[80vh] flex items-center justify-center py-12 px-4">
  <div class="w-full max-w-md">
    <div class="card">
      <div class="card-body">
        <!-- Header -->
        <div class="text-center mb-8">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-accent-primary/10 mb-4">
            <svg class="h-8 w-8 text-accent-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-primary">パスワードをリセット</h1>
          <p class="text-secondary mt-2">メールアドレスを入力してください</p>
        </div>

        <%= form_with model: resource, url: password_path(resource_name), method: :post, class: "space-y-5" do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <!-- Email -->
          <div class="form-group">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email,
                              class: "form-input",
                              placeholder: "登録済みのメールアドレス",
                              autofocus: true,
                              autocomplete: "email" %>
          </div>

          <!-- Submit -->
          <div class="pt-2">
            <%= f.submit "リセット手順を送信", class: "btn-primary w-full py-3" %>
          </div>
        <% end %>

        <!-- Links -->
        <div class="mt-6 text-center">
          <p class="text-secondary">
            <%= link_to "ログインに戻る", new_user_session_path, class: "text-accent-primary hover:underline" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
