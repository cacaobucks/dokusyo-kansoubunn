<article class="card overflow-hidden group" id="<%= dom_id(book) %>">
  <%= link_to book_path(book), class: "block" do %>
    <!-- Image -->
    <div class="aspect-[4/3] bg-bg-tertiary relative overflow-hidden">
      <% if book.image.attached? %>
        <%= image_tag book.image, class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
      <% else %>
        <div class="w-full h-full flex items-center justify-center">
          <svg class="h-16 w-16 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                  d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
      <% end %>

      <!-- Rating Badge -->
      <% if book.average_rating.to_f > 0 %>
        <div class="absolute top-2 right-2 bg-bg-primary/90 backdrop-blur-sm rounded-lg px-2 py-1 flex items-center gap-1">
          <svg class="h-4 w-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          <span class="text-sm font-medium text-primary"><%= book.average_rating %></span>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="p-4">
    <!-- Title -->
    <%= link_to book_path(book), class: "block mb-2 hover:text-accent-primary transition-colors" do %>
      <h3 class="font-semibold text-primary line-clamp-1"><%= book.title %></h3>
    <% end %>

    <!-- Body Preview -->
    <p class="text-sm text-secondary line-clamp-2 mb-3"><%= book.body %></p>

    <!-- Tags -->
    <% if book.tags.any? %>
      <div class="flex flex-wrap gap-1 mb-3">
        <% book.tags.limit(3).each do |tag| %>
          <span class="badge badge-primary text-xs">#<%= tag.name %></span>
        <% end %>
      </div>
    <% end %>

    <!-- User Info -->
    <% if local_assigns[:show_user] %>
      <div class="flex items-center gap-2 mb-3 pt-3 border-t border-border-color">
        <%= link_to user_path(book.user), class: "flex items-center gap-2 hover:opacity-80 transition-opacity" do %>
          <% if book.user.profile_image.attached? %>
            <%= image_tag book.user.profile_image.variant(resize_to_fill: [32, 32]), class: "avatar avatar-sm" %>
          <% else %>
            <div class="avatar avatar-sm bg-accent-primary flex items-center justify-center text-white text-xs font-medium">
              <%= book.user.name[0].upcase %>
            </div>
          <% end %>
          <span class="text-sm text-secondary hover:text-primary"><%= book.user.name %></span>
        <% end %>
        <span class="text-xs text-muted ml-auto"><%= time_ago_in_words(book.created_at) %>Ââç</span>
      </div>
    <% end %>

    <!-- Actions -->
    <div class="flex items-center gap-4 text-sm">
      <!-- Favorite Button -->
      <div id="favorite_button_<%= book.id %>" class="flex items-center gap-1">
        <%= render "books/favorite_button", book: book %>
      </div>

      <!-- Comments Count -->
      <%= link_to book_path(book, anchor: "comments"), class: "flex items-center gap-1 text-secondary hover:text-accent-primary transition-colors" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        <span id="comments_count_<%= book.id %>"><%= book.book_comments_count %></span>
      <% end %>

      <!-- Bookmark Button -->
      <% if user_signed_in? %>
        <div id="bookmark_button_<%= book.id %>" class="ml-auto">
          <%= render "books/bookmark_button", book: book %>
        </div>
      <% end %>
    </div>
  </div>
</article>
