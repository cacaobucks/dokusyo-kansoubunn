<%# locals: (book:) %>
<% if user_signed_in? %>
  <% if book.favorited_by?(current_user) %>
    <%= button_to book_favorite_path(book),
                  method: :delete,
                  class: "flex items-center gap-1 text-accent-danger hover:opacity-80 transition-opacity group",
                  data: { turbo_frame: "_top" } do %>
      <svg class="h-5 w-5 group-hover:animate-bounce-heart" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
      </svg>
      <span><%= book.favorites_count %></span>
    <% end %>
  <% else %>
    <%= button_to book_favorite_path(book),
                  method: :post,
                  class: "flex items-center gap-1 text-secondary hover:text-accent-danger transition-colors group",
                  data: { turbo_frame: "_top" } do %>
      <svg class="h-5 w-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
      </svg>
      <span><%= book.favorites_count %></span>
    <% end %>
  <% end %>
<% else %>
  <span class="flex items-center gap-1 text-secondary">
    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
    </svg>
    <span><%= book.favorites_count %></span>
  </span>
<% end %>
