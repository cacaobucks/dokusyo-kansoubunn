<div class="grid lg:grid-cols-4 gap-8">
  <!-- Sidebar -->
  <aside class="lg:col-span-1">
    <!-- New Book Form -->
    <div class="card card-body sticky top-24">
      <h2 class="text-lg font-semibold text-primary mb-4 flex items-center gap-2">
        <svg class="h-5 w-5 text-accent-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        新規投稿
      </h2>
      <div id="book_form">
        <%= render "books/form", book: @book %>
      </div>
    </div>
  </aside>

  <!-- Main Content -->
  <main class="lg:col-span-3">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-bold text-primary">投稿一覧</h1>
      <div class="flex items-center gap-2 text-sm text-secondary">
        <span><%= @books.total_count %>件</span>
      </div>
    </div>

    <div id="books_list">
      <% if @books.any? %>
        <div class="grid sm:grid-cols-2 gap-6">
          <% @books.each do |book| %>
            <%= render "books/book_card", book: book, show_user: true %>
          <% end %>
        </div>

        <!-- Pagination -->
        <% if @books.total_pages > 1 %>
          <div class="mt-8 flex justify-center">
            <%= paginate @books %>
          </div>
        <% end %>
      <% else %>
        <div class="empty-state">
          <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                  d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <h3 class="empty-state-title">まだ投稿がありません</h3>
          <p class="empty-state-text">最初の投稿をしてみましょう！</p>
        </div>
      <% end %>
    </div>
  </main>
</div>
