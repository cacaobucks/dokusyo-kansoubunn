<div class="max-w-2xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-primary">通知</h1>
    <% if @notifications.unread.any? %>
      <%= button_to mark_all_as_read_notifications_path, class: "btn-ghost btn-sm text-accent-primary" do %>
        すべて既読にする
      <% end %>
    <% end %>
  </div>

  <div id="notifications_list" class="card divide-y divide-border-color">
    <% if @notifications.any? %>
      <% @notifications.each do |notification| %>
        <%= render "notifications/notification", notification: notification %>
      <% end %>
    <% else %>
      <div class="p-12 text-center">
        <svg class="h-16 w-16 text-muted mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
        </svg>
        <h3 class="text-lg font-medium text-primary mb-2">通知はありません</h3>
        <p class="text-secondary">新しい通知があればここに表示されます</p>
      </div>
    <% end %>
  </div>

  <% if @notifications.total_pages > 1 %>
    <div class="mt-8 flex justify-center">
      <%= paginate @notifications %>
    </div>
  <% end %>
</div>
