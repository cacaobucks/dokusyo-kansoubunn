<%# locals: (book:, user_rating:) %>
<div class="flex items-center gap-4" data-controller="rating">
  <div class="flex items-center gap-1">
    <% if user_signed_in? %>
      <%= form_with model: [book, user_rating || Rating.new],
                    url: user_rating ? book_rating_path(book) : book_rating_path(book),
                    method: user_rating ? :patch : :post,
                    data: { rating_target: "form" },
                    class: "flex items-center gap-1" do |f| %>
        <%= f.hidden_field :score, value: user_rating&.score || 0, data: { rating_target: "input" } %>
        <% (1..5).each do |i| %>
          <button type="button"
                  class="star <%= i <= (user_rating&.score || 0) ? 'star-filled' : 'star-empty' %>"
                  data-rating="<%= i %>"
                  data-action="click->rating#select mouseenter->rating#hover mouseleave->rating#leave"
                  data-rating-target="star">
            <svg fill="currentColor" viewBox="0 0 20 20" class="h-6 w-6">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          </button>
        <% end %>
      <% end %>
    <% else %>
      <% (1..5).each do |i| %>
        <svg class="h-6 w-6 <%= i <= book.average_rating.to_i ? 'text-yellow-400' : 'text-muted' %>" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      <% end %>
    <% end %>
  </div>

  <div class="text-sm text-secondary">
    <% if book.average_rating.to_f > 0 %>
      <span class="font-medium text-primary"><%= book.average_rating %></span>
      <span class="text-muted">(<%= book.ratings_count %>件の評価)</span>
    <% else %>
      <span class="text-muted">評価なし</span>
    <% end %>
  </div>
</div>
