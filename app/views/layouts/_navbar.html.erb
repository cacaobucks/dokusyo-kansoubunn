<nav class="bg-bg-secondary border-b border-border-color sticky top-0 z-40">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <%= link_to root_path, class: "flex items-center space-x-2 hover:opacity-80 transition-opacity" do %>
        <svg class="h-8 w-8 text-accent-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        <span class="text-xl font-bold text-accent-primary">読書感想文</span>
      <% end %>

      <% if user_signed_in? %>
        <!-- Search Bar (Desktop) -->
        <div class="hidden md:flex flex-1 max-w-md mx-8">
          <%= form_with url: search_path, method: :get, class: "relative" do |f| %>
            <input type="text"
                   name="q"
                   placeholder="本やユーザーを検索..."
                   value="<%= params[:q] %>"
                   class="form-input pl-10 pr-4 py-2 text-sm"
                   autocomplete="off">
            <svg class="absolute left-3 top-2.5 h-5 w-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          <% end %>
        </div>
      <% end %>

      <!-- Navigation Links -->
      <div class="flex items-center space-x-2">
        <% if user_signed_in? %>
          <!-- Books -->
          <%= link_to books_path, class: "nav-link", title: "投稿一覧" do %>
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          <% end %>

          <!-- Users -->
          <%= link_to users_path, class: "nav-link", title: "ユーザー一覧" do %>
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          <% end %>

          <!-- Notifications -->
          <div class="relative" data-controller="dropdown">
            <button data-action="click->dropdown#toggle" class="nav-link relative" title="通知">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
              </svg>
              <% if current_user.unread_notifications_count > 0 %>
                <span class="absolute -top-1 -right-1 bg-accent-danger text-white text-xs rounded-full h-5 w-5 flex items-center justify-center font-medium">
                  <%= current_user.unread_notifications_count > 9 ? "9+" : current_user.unread_notifications_count %>
                </span>
              <% end %>
            </button>

            <div data-dropdown-target="menu" class="hidden dropdown-menu w-80">
              <div class="px-4 py-3 border-b border-border-color">
                <div class="flex items-center justify-between">
                  <span class="font-medium text-primary">通知</span>
                  <%= link_to "すべて見る", notifications_path, class: "text-sm text-accent-primary hover:underline" %>
                </div>
              </div>
              <div class="max-h-96 overflow-y-auto">
                <% if current_user.notifications.recent.limit(5).any? %>
                  <% current_user.notifications.recent.limit(5).each do |notification| %>
                    <%= render "notifications/notification_item", notification: notification %>
                  <% end %>
                <% else %>
                  <div class="px-4 py-8 text-center text-muted">
                    通知はありません
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <!-- User Menu -->
          <div class="relative" data-controller="dropdown">
            <button data-action="click->dropdown#toggle" class="flex items-center space-x-2 p-1 rounded-lg hover:bg-bg-tertiary transition-colors">
              <% if current_user.profile_image.attached? %>
                <%= image_tag current_user.profile_image.variant(resize_to_fill: [32, 32]), class: "avatar avatar-sm" %>
              <% else %>
                <div class="avatar avatar-sm bg-accent-primary flex items-center justify-center text-white font-medium">
                  <%= current_user.name[0].upcase %>
                </div>
              <% end %>
            </button>

            <div data-dropdown-target="menu" class="hidden dropdown-menu">
              <div class="px-4 py-3 border-b border-border-color">
                <p class="text-sm font-medium text-primary"><%= current_user.name %></p>
                <% if current_user.username.present? %>
                  <p class="text-xs text-muted">@<%= current_user.username %></p>
                <% end %>
              </div>
              <%= link_to user_path(current_user), class: "dropdown-item flex items-center gap-2" do %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                マイページ
              <% end %>
              <%= link_to bookmarks_path, class: "dropdown-item flex items-center gap-2" do %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
                </svg>
                ブックマーク
              <% end %>
              <%= link_to edit_user_registration_path, class: "dropdown-item flex items-center gap-2" do %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                設定
              <% end %>
              <hr class="border-border-color my-1">
              <%= button_to destroy_user_session_path, method: :delete, class: "dropdown-item flex items-center gap-2 w-full text-accent-danger" do %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                ログアウト
              <% end %>
            </div>
          </div>

        <% else %>
          <%= link_to root_path, class: "nav-link" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span class="hidden sm:inline">ホーム</span>
          <% end %>
          <%= link_to about_path, class: "nav-link" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="hidden sm:inline">About</span>
          <% end %>
          <%= link_to "ログイン", new_user_session_path, class: "btn-secondary btn-sm" %>
          <%= link_to new_user_registration_path, class: "btn-primary btn-sm" do %>
            新規登録
          <% end %>
        <% end %>

        <!-- Dark Mode Toggle -->
        <button data-action="click->dark-mode#toggle" class="nav-link" title="テーマ切替">
          <svg data-dark-mode-target="darkIcon" class="h-5 w-5 hidden" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
          </svg>
          <svg data-dark-mode-target="lightIcon" class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</nav>
