<% if flash.any? %>
  <div class="mb-6 space-y-2">
    <% flash.each do |type, message| %>
      <% next if message.blank? %>
      <%
        classes = case type.to_s
                  when "notice", "success"
                    "toast toast-success"
                  when "alert", "error"
                    "toast toast-error"
                  else
                    "toast"
                  end
      %>
      <div class="<%= classes %> animate-fade-in" data-controller="toast">
        <% if type.to_s.in?(["notice", "success"]) %>
          <svg class="h-5 w-5 text-accent-success flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% else %>
          <svg class="h-5 w-5 text-accent-danger flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% end %>
        <span class="text-sm text-primary"><%= message %></span>
        <button data-action="click->toast#dismiss" class="ml-auto text-muted hover:text-primary transition-colors">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    <% end %>
  </div>
<% end %>
